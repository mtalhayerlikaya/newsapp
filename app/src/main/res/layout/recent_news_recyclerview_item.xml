<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recent_news_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    >
       >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/recent_news_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:background="@drawable/recent_news_radius"
        >

    </ImageView>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        >
        <TextView
            android:id="@+id/recent_news_writer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TALHA YERLIKAYA"

            >

        </TextView>

        <TextView
            android:id="@+id/recent_news_article_name"
            android:paddingTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#403636"
            android:textStyle="bold"
            android:text="An Article About Global Warming:\nHow to Stop Global Warming">

        </TextView>




    </LinearLayout>





</LinearLayout>






</androidx.cardview.widget.CardView>